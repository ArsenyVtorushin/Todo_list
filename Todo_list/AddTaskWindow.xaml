<Window x:Class="Todo_list.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo_list"
        mc:Ignorable="d"
        Title="Добавление нового дела" Height="450" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Новое дело"
                   TextAlignment="Center"
                   FontSize="26"
                   Margin="15"/>

        <GroupBox Grid.Row="1" 
            Background="#FDF5DF" Margin="7"
            Name="groupBoxToDo">
            <StackPanel>
                <TextBlock Text="Название:" Margin="5"/>
                <TextBox Margin="5" Name="titleToDo"/>

                <TextBlock Text="Выполнить до:" Margin="5"/>
                <DatePicker Margin="5" Name="dateToDo" 
                            SelectedDate="2024 10 01"
                            SelectedDateFormat="Short"/>

                <TextBlock Text="Описание:" Margin="5"/>
                <TextBox Name="descriptionToDo"
                         Text="Описания нет"
                         MaxLines="10"
                         Margin="5"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         AcceptsTab="True"/>
            </StackPanel>
        </GroupBox>

        <Button Content="Сохранить дело" 
                Name="buttonSave"
                Grid.Row="2" 
                Grid.Column="1"
                Margin="10"
                Padding="7"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#5EBEC4"
                FontSize="15"
                Click="SaveTask_Click"/>

    </Grid>
</Window>
