<Window x:Class="Todo_list.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo_list"
        mc:Ignorable="d"
        Title="Добавление нового дела" Height="450" Width="400"
        ResizeMode="NoResize">

    <Window.Resources>
        
        <Style x:Key="CalendarDatePickerStyle" TargetType="Calendar">
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="BorderBrush" Value="#5EBEC4"/>
            <Setter Property="Background" Value="#FFFDFAF1"/>
        </Style>
        
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="SelectedDateFormat" Value="Long"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="BorderBrush" Value="#5EBEC4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CalendarStyle" Value="{StaticResource CalendarDatePickerStyle}"/>
        </Style>

    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Новое дело"
                   TextAlignment="Center"
                   Style="{StaticResource HeaderStyle}"/>

        <GroupBox Grid.Row="1" 
            Background="#FDF5DF" Margin="7"
            Name="groupBoxToDo">
            <StackPanel>
                <TextBlock Text="Название:" Margin="5"/>
                <TextBox Margin="5" Name="titleToDo"/>

                <TextBlock Text="Выполнить до:" Margin="5"/>
                <DatePicker Margin="5" Name="dateToDo"
                            Language="Ru"
                            SelectedDate="{Binding CurrentDate, StringFormat='dd.MM.yyyy'}"
                            Style="{StaticResource DatePickerStyle}"/>

                <TextBlock Text="Описание:" Margin="5"/>
                <TextBox Name="descriptionToDo"
                         Text="Описания нет"
                         MaxLines="5"
                         Margin="5"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </GroupBox>

        <Button Content="Сохранить дело" 
                Name="buttonSave"
                Grid.Row="2" 
                Grid.Column="1"
                Margin="10"
                Padding="7"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#5EBEC4"
                FontSize="15"
                Click="SaveTask_Click"/>

    </Grid>
</Window>
