                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ProgressBar Grid.Row="2"
                     x:Name="progressBarToDo"
                     Margin="7"
                     Style="{StaticResource ProgressBarStyle}"/>

        <TextBlock Grid.Row="2" 
                   x:Name="textBoxOnProgressBar"
                   Margin="7"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <Run Name="value"></Run>
            <Run>/</Run>
            <Run Name="maximum"></Run>
        </TextBlock>


    </Grid>

</Window>
