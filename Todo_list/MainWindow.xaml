<Window x:Class="Todo_list.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo_list"
        mc:Ignorable="d"
        Title="Список дел"
        Height="450" Width="400"
        Background="#FFFDFAF1"
        Icon="/Images/icon.png">

    <Window.Resources>

        <local:DateTimeLessDateConverter x:Key="LessDayConverter"/>
        <local:DateTimeEqualDateConverter x:Key="EqualDayConverter"/>
        <local:DateTimeTomorrowDateConverter x:Key="TomorrowDayConverter"/>
        <local:DateTimeGreaterDateConverter x:Key="GreaterDayConverter"/>

        <Style x:Key="DateStyle" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Date, Converter={StaticResource LessDayConverter}}"
                             Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Date, Converter={StaticResource EqualDayConverter}}"
                             Value="True">
                    <Setter Property="Foreground" Value="#FFEA6A20"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Date, Converter={StaticResource TomorrowDayConverter}}"
                             Value="True">
                    <Setter Property="Foreground" Value="#DAA520"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=Date, Converter={StaticResource GreaterDayConverter}}"
                             Value="True">
                    <Setter Property="Foreground" Value="#FF71C52F"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Style.Setters>
                <Setter Property="Maximum" Value="{Binding ItemsCount}"/>
                <Setter Property="Value" Value="{Binding DoneItemsCount}"/>
                <Setter Property="Foreground" Value="#5EBEC4"/>
                <Setter Property="Background" Value="#FFFDFAF1"/>
            </Style.Setters>
        </Style>

        <Style x:Key="StrikethroughTextBlock" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=checkBox, Path=IsChecked}" Value="True">
                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
    </Window.Resources>
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Список дел"
                   TextAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{StaticResource HeaderStyle}"/>

        <Button Name="buttonAdd"
                Grid.Row="0"
                Margin="15"
                Padding="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="#5EBEC4"
                Click="AddTask_Click"
                Height="40"
                Width="60">
            <Image Source="/Images/add.png"/>
        </Button>

        <ListBox x:Name="listBoxToDo"
                 Grid.Row="1"
                 Margin="7 0"
                 HorizontalContentAlignment="Stretch"
                 Background="#FDF5DF">
            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="checkBox"
                                  Grid.Row="0" Grid.Column="0" 
                                  Margin="2 0 2 0"
                                  Checked="CheckBox_Checked"
                                  Unchecked="CheckBox_Unchecked"
                                  IsChecked="{Binding Path=Done}"/>

                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Margin="2 0 2 0"
                                   FontSize="14"
                                   Text="{Binding Path=Title}"
                                   Style="{StaticResource StrikethroughTextBlock}"/>

                        <TextBlock Grid.Row="0" Grid.Column="2"
                                   Margin="2 0 2 0"
                                   HorizontalAlignment="Right"
                                   FontSize="14"
                                   Style="{StaticResource DateStyle}"
                                   Text="{Binding Path=Date, StringFormat=dd.MM.yyyy}"/>

                        <Button Name="deleteTask_button"
                                Click="DeleteTask_Click"
                                Grid.Row="0"
                                Grid.Column="3"
                                Margin="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Background="#5EBEC4"
                                Height="20" Width="20">
                            <Image Source="/Images/delete.png" 
                                   Height="18"/>
                        </Button>

                        <ScrollViewer Grid.Row="1" Grid.Column="0" 
                                      Grid.ColumnSpan="4" 
                                      VerticalScrollBarVisibility="Auto"
                                      Margin="2 0 2 0"
                                      MaxHeight="60">
                            <TextBlock FontSize="12"
                                       Text="{Binding Path=Description}"/>
                        </ScrollViewer>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ProgressBar Grid.Row="2"
                     x:Name="progressBarToDo"
                     Margin="7"
                     Style="{StaticResource ProgressBarStyle}"/>

        <TextBlock Grid.Row="2" 
                   x:Name="textBoxOnProgressBar"
                   Margin="7"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <Run Name="value"></Run>
            <Run>/</Run>
            <Run Name="maximum"></Run>
        </TextBlock>


    </Grid>

</Window>
