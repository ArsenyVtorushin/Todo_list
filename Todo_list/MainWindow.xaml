<Window x:Class="Todo_list.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo_list"
        mc:Ignorable="d"
        Title="Список дел"
        Height="450" Width="400"
        Background="#FFFDFAF1"
        Icon="/Images/icon.png">

    <Window.Resources>

        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Style.Setters>
                <Setter Property="Maximum" Value="{Binding ItemsCount}"/>
                
                <!--"{Binding ElementName=listBoxToDo, Path=Items.Count}"/>-->
                
                <Setter Property="Value" Value="{Binding DoneItemsCount}"/>
                
                <!--"{Binding ElementName=listBoxToDo,
                    Path=Items.Count, Converter={StaticResource progressbarValueConverter}}"-->
                
                <Setter Property="Foreground" Value="#5EBEC4"/>
                <Setter Property="Background" Value="#FFFDFAF1"/>
            </Style.Setters>
        </Style>

        <Style x:Key="StrikethroughTextBlock" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=checkBox, Path=IsChecked}" Value="True">
                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
    </Window.Resources>
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Список дел"
                   TextAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{StaticResource HeaderStyle}"/>

        <Button Name="buttonAdd"
                Grid.Row="0"
                Margin="15"
                Padding="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="#5EBEC4"
                Click="AddTask_Click"
                Height="40"
                Width="60">
            <Image Source="/Images/add.png"/>
        </Button>

