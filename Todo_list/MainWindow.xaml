<Window x:Class="Todo_list.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo_list"
        mc:Ignorable="d"
        Title="Список дел" Height="450" Width="400"
        Background="#FFFDFAF1">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>



        <TextBlock Text="Список дел"
                   TextAlignment="Center"
                   FontSize="26"
                   Margin="15"/>

        <DataGrid x:Name="dataGridToDo"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  HeadersVisibility="None">
            
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="0.05*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Binding="{Binding Path=Title}" Width="0.6*"/>
                <DataGridTextColumn Binding="{Binding Path=Date}" Width="0.3*"/>

                <DataGridTemplateColumn Width="0.05*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="X"
                                    Background="#5EBEC4">
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Description}"/>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
            
        </DataGrid>

        <Button Content="Добавить дело"
                Name="buttonAdd"
                Grid.Row="2" 
                Grid.Column="1"
                Margin="10"
                Padding="7"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#5EBEC4"
                FontSize="15"
                Click="AddTask_Click"/>

    </Grid>

</Window>
